<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.example.cardnotes.domain.NoteDomain" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/note_item_host"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/tvName"
                style="@style/CardNotes.TextView.NoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.name}"
                tools:text="Title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="@{model.name.length() == 0 ? View.GONE : View.VISIBLE}"/>
            <View
                android:id="@+id/title_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:visibility="@{model.name.length() == 0 ? View.INVISIBLE : View.VISIBLE}"/>
            <TextView
                android:id="@+id/tvValue"
                style="@style/CardNotes.TextView.NoteContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{model.value}"
                tools:text="Value"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_separator"
                app:layout_constraintBottom_toTopOf="@id/tv_created_at"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <TextView
                android:id="@+id/tv_created_at"
                style="@style/CardNotes.TextView.CreatedAt"
                tools:text="Created at"
                android:text="@{model.dateCreatedString}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvValue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/checkbox"
                android:layout_marginTop="8dp"/>
            <com.example.cardnotes.customviews.RevealedCheckBox
                android:id="@+id/checkbox"
                android:layout_width="26dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/tv_created_at"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="0dp"
                app:buttonTint="@color/colorPrimary"
                android:checked="@={model.isSelected}"
                android:visibility="@{model.isSelectionEnabled == true ? View.VISIBLE : View.INVISIBLE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>