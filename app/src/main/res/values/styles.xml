<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:alertDialogTheme">@style/CardNotes.AlertDialog</item>
        <item name="popupMenuStyle">@style/CardNotes.PopupMenu</item>
    </style>

    <style name="CardNotes.TextInputLayout"
            parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>

    </style>

    <style name="CardNotes.AlertDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button
        </item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardNotes.TextView" parent="">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardNotes.TextView.NoteContent">
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Body1
        </item>
    </style>

    <style name="CardNotes.TextView.NoteTitle">
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardNotes.TextView.CreatedAt">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Body2
        </item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardNotes.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_bg_with_shadow</item>
    </style>

</resources>