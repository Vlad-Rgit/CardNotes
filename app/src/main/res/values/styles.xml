<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="materialAlertDialogTheme">@style/CardNotes.AlertDialog</item>
        <item name="android:popupMenuStyle">@style/CardNotes.PopupMenu</item>
        <item name="bottomSheetStyle">@style/CardNotes.BottomSheetStyle</item>
    </style>

    <style name="CardNotes.BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="shapeAppearanceOverlay">@style/CardNotes.AlertDialog.ShapeOverlay</item>
    </style>

    <style name="CardNotes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>

    </style>

    <style name="CardNotes.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">
            @style/CardNotes.AlertDialog.Title
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/TextAppearance.MaterialComponents.Body1
        </item>
        <item name="shapeAppearanceOverlay">
            @style/CardNotes.AlertDialog.ShapeOverlay
        </item>
    </style>

    <style name="CardNotes.AlertDialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="CardNotes.AlertDialog.ShapeOverlay" parent="">
        <item name="cornerSize">@dimen/default_radius</item>
    </style>


    <style name="CardNotes.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardNotes.TextView.NoteContent" parent="CardNotes.TextView">
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Body1
        </item>
    </style>

    <style name="CardNotes.TextView.NoteTitle" parent="CardNotes.TextView">
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardNotes.TextView.CreatedAt" parent="CardNotes.TextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Body2
        </item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardNotes.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_bg_with_shadow</item>
        <item name="popupMenuBackground">@drawable/popup_bg_with_shadow</item>
    </style>

</resources>